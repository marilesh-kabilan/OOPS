package kabilan;

class Racer extends Thread {
    private String name;
    private int sleepTime;

    public Racer(String name, int sleepTime) {
        this.name = name;
        this.sleepTime = sleepTime;
    }

    @Override
    public void run() {
        for (int step = 1; step <= 5; step++) {
            System.out.println(name + " is at step " + step);
            try {
                Thread.sleep(sleepTime);
            } catch (InterruptedException e) {
                System.out.println(name + " was interrupted.");
            }
        }
        System.out.println(name + " has finished the race!");
    }
}

public class Race {

    public static void main(String[] args) {
        // TC1: Two threads start → Both race together
        Racer racerA = new Racer("Thread A", 500); // 500ms sleep
        Racer racerB = new Racer("Thread B", 500); // 500ms sleep

        // TC2: Sleep time different → One finishes first
        // Racer racerA = new Racer("Thread A", 300);
        // Racer racerB = new Racer("Thread B", 700);

        // TC4: Add a third thread
        // Racer racerC = new Racer("Thread C", 500);

        racerA.start();
        racerB.start();
        // racerC.start(); // Uncomment for TC4
    }
}
